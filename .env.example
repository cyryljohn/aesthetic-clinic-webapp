# Aesthetic Clinic Environment Variables
# Copy this file to .env.local and fill in your actual values

# Google Gemini AI Chatbot
REACT_APP_GEMINI_API_KEY=your_gemini_api_key_here

# Calendly Booking System
REACT_APP_CALENDLY_URL=https://calendly.com/your-clinic-username

# Klaviyo Integration (SMS/Email Marketing)
REACT_APP_KLAVIYO_PUBLIC_KEY=pk_your_klaviyo_public_key_here
REACT_APP_KLAVIYO_PRIVATE_KEY=sk_your_klaviyo_private_key_here

# HubSpot Integration (Lead Tracking)
REACT_APP_HUBSPOT_PORTAL_ID=your_hubspot_portal_id_here
REACT_APP_HUBSPOT_API_KEY=your_hubspot_api_key_here
REACT_APP_HUBSPOT_CONTACT_FORM_ID=your_contact_form_id_here
REACT_APP_HUBSPOT_NEWSLETTER_FORM_ID=your_newsletter_form_id_here

# Meta Pixel Integration (Facebook Ad Tracking)
REACT_APP_META_PIXEL_ID=your_meta_pixel_id_here

# Google Analytics (Optional)
REACT_APP_GA_TRACKING_ID=G-your_tracking_id_here

# API Endpoints (if using backend)
REACT_APP_API_URL=http://localhost:3001
REACT_APP_API_TIMEOUT=30000

# Email Configuration
REACT_APP_CONTACT_EMAIL=info@aestheticclinic.ca
REACT_APP_ADMIN_EMAIL=admin@aestheticclinic.ca

# Feature Flags
REACT_APP_ENABLE_BOOKING=true
REACT_APP_ENABLE_CHAT=true
REACT_APP_ENABLE_REVIEWS=true
REACT_APP_ENABLE_ANALYTICS=true